{
  "name": "rehype-image-caption",
  "version": "2.1.4",
  "description": "rehype plugin to set captions for images in addition to alt text.",
  "publishConfig": {
    "provenance": true
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/"
  ],
  "type": "module",
  "scripts": {
    "test": "vitest",
    "build": "tsc",
    "version": "npm run build && git add .",
    "format": "prettier ./src/ --write",
    "format:check": "prettier ./src/ --check",
    "lint": "npx eslint ./src/**/*.ts",
    "changeset-version": "changeset version && npm run version",
    "changeset-publish": "npm run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robot-Inventor/rehype-image-caption.git"
  },
  "keywords": [
    "rehype",
    "rehype-plugin"
  ],
  "author": "Robot-Inventor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Robot-Inventor/rehype-image-caption/issues"
  },
  "homepage": "https://github.com/Robot-Inventor/rehype-image-caption#readme",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@robot-inventor/eslint-config": "^11.0.0",
    "@robot-inventor/tsconfig-base": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "rehype-stringify": "^10.0.0",
    "remark-breaks": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "hast-util-is-element": "^3.0.0",
    "mdast-util-mdx-jsx": "^3.1.2",
    "rehype": "^13.0.1",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0"
  }
}
